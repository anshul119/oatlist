{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"baseUrl": "./src",
		"outDir": "ts-build",
		"sourceMap": true,
		"jsx": "react",
		"strict": true,
		"moduleResolution": "node",
		"noErrorTruncation": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true
	},
	"exclude": ["node_modules"]
}
